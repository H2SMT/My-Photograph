<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg",size: "100x100" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>ユーザー名</th>
            <th><%= @user.name %></th>
          </tr>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to (edit_user_path(@user.id)), class:"btn btn-outline-secondary btn-block fas fa-user-cog" do %><%end%>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>My Photograph</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <th></th>
            <th>Title</th>
            <th>説明</th>
            <th colspan="3"></th>
          </thead>
          <tbody>
            <% @post_images.each do |post_image| %>
            <% user = User.find(post_image.user_id) %>
            <tr>
              <td>
                <%= link_to user_path(user.id) do %>
                  <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
                <% end %>
              </td>
              <td>
                <%= link_to post_image_path(post_image.id) do %>
                  <%= post_image.post_name %>
                <% end %>
              </td>
              <td><%= post_image.caption %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
